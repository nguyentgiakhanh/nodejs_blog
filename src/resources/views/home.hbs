<div class="mt-4">
  <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-margin-item ">
                <a href="/courses/{{slug}}">
                    <img class="card-img-top img-card" src="{{image}}" alt="Card image cap" />
                </a>
                <div class="card-body">
                    <a href="/courses/{{slug}}">
                        <h5 class="card-title">{{name}}</h5>
                    </a>
                    <p class="card-text">{{desc}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
  </div>
</div>