<div class="mt-4">
  <form method="POST" action="/search">
    <div class="form-group">
      <label for="search-input">Nhập tên</label>
      <input type="text" name="q" class="form-control" id="search-input" placeholder="Nhập từ khóa">
    </div>

    <div class="form-group">
      <label for="gender-input"></label>
      <select type="text" name="gender" class="gender-control" id="gender-input" >
        <option value="">-- Chọn giới tính --</option>
        <option value="male">Nam</option>
        <option value="female">Nữ</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
  </form>
</div>